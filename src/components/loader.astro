<section class="wrapper-loader-processing" data-loader="loader">
    <div class="content-loader-processing">
        <span class="svg-loader-processing">
            <svg xmlns="http://www.w3.org/2000/svg"
                xmlns:xlink="http://www.w3.org/1999/xlink"
                style="margin: auto; display: block;" width="80px" height="80px"
                viewBox="0 0 100 100" preserveAspectRatio="xMidYMid">
                <circle cx="50" cy="50" r="0" fill="none" stroke="#FFC629" stroke-width="2">
                    <animate attributeName="r" repeatCount="indefinite" dur="1s" values="0;40" keyTimes="0;1" keySplines="0 0.2 0.8 1" calcMode="spline" begin="0s"></animate>
                    <animate attributeName="opacity" repeatCount="indefinite" dur="1s" values="1;0" keyTimes="0;1" keySplines="0.2 0 0.8 1" calcMode="spline" begin="0s"></animate>
                </circle>
                <circle cx="50" cy="50" r="0" fill="none" stroke="#FFC629" stroke-width="2">
                    <animate attributeName="r" repeatCount="indefinite" dur="1s" values="0;40" keyTimes="0;1" keySplines="0 0.2 0.8 1" calcMode="spline" begin="-0.5s"></animate>
                    <animate attributeName="opacity" repeatCount="indefinite" dur="1s" values="1;0" keyTimes="0;1" keySplines="0.2 0 0.8 1" calcMode="spline" begin="-0.5s"></animate>
                </circle>
            </svg>
        </span>
        <span class="svg-text-processing">Loading...</span>
    </div>
</section>

<style is:inline>
    .wrapper-loader-processing {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 9999;
        background-color: #fff;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .content-loader-processing {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
    }
    .content-loader-processing .svg-loader-processing {
        margin-bottom: 0.5rem;
    }
    .content-loader-processing .svg-text-processing {
        color: #777;
        font-size: 0.9rem;
    }

    [data-bs-theme=dark] .wrapper-loader-processing{
        background-color: #161515;
    }
    [data-bs-theme=dark] .content-loader-processing .svg-text-processing {
        color: #ddd;
    }
</style>

<script is:inline>
    window.addEventListener('load', function() {
        const loader = document.querySelector('[data-loader="loader"]')

        if(loader){
            try {
                loader.remove()
            }
            catch (error) {
                console.error('Error loading page:', error.message);
            }
            finally{
                if(this.document.body.contains(loader)){
                    loader.remove()
                }
            }
        }
    })
</script>
